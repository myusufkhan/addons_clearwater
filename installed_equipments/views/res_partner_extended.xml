<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_equipments" model="ir.ui.view">
        <field name="name">view.res.partner.form.equipments</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="200"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                <button type="object" name="action_create_equipments" icon="fa-wrench">
                    <field string="Installed Equipments" name="equipments_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>




</odoo>

